{
    "name": "my-turk",
    "version": "1.0.0",
    "scripts": {
        "prestart": "mongod --dbpath=./data/ --fork --logpath /dev/null",
        "start": "yarn --cwd ./backend/ start | yarn --cwd ./frontend/ serve",
        "stop": "mongo admin --eval \"db.getSiblingDB('admin').shutdownServer()\""
